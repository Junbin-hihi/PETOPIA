   	  	<when test="category.equals('CLUB')">
   	  		WHERE
   	  			  B.CATEGORY = 'CLUB'
   	  		  AND 
   	  	    	  B.STATUS = 'Y'
   	  	</when>
   	  	<when test="category.equals('BOAST')">
   	  		WHERE
   	  			  B.CATEGORY = 'BOAST'
   	  		  AND 
   	  	    	  B.STATUS = 'Y'
   	  	</when>
   	  	<otherwise>
   	  	   WHERE
   	  	   	     B.STATUS = 'Y'
   	  	</otherwise>
   	  </choose>
   	 ORDER
   	 	BY
   	 	   B.BOARD_NO DESC
	 </select>
	 
	 <update id="increaseCount" parameterType="_int">
	 	update 
	 	  	   board
	 	   set
	 	       BOARD_COUNT = BOARD_COUNT + 1
	 	 where
	 	       BOARD_NO = #{boardNo}
	 </update>
	 
	 <select id="selectDetailBoard" resultType="board">
	 	select 
	 		   B.BOARD_TITLE boardTitle
	 		   ,NICKNAME nickName
	 		   ,B.CREATE_DATE createDate
	 		   ,ORIGIN_NAME originName
	 		   ,CHANGE_NAME changeName
	 		   ,FILE_PATH filePath
	 		   ,B.BOARD_CONTENT boardContent
	 	  FROM 
	 	       BOARD B
	      JOIN
	           MEMBER USING(MEMBER_NO)
	 LEFT JOIN
	      	   ATTACHMENT ON(MEMBER_NO = REF_NO)
	     WHERE
	           B.BOARD_NO = #{boardNo}
	       AND
	           B.STATUS = 'Y'	 	 		   	
	 </select>
	 
