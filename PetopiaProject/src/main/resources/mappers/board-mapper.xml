<mapper namespace="boardMapper">

	<select id="countBoard" resultType="_int" parameterType="string">
		SELECT
		       COUNT(*)
		  FROM
		  	   BOARD
		<choose>
			<when test="category.equals('CLUB')">
				WHERE
				      CATEGORY = 'CLUB'
			      AND
	   	   			  STATUS = 'Y'
			</when>
			<when test="category.equals('BOAST')">
				WHERE
					  CATEGORY = 'BOAST'
				  AND
		   	   		  STATUS = 'Y'
			</when>
			<otherwise>
				WHERE
		   	   		  STATUS = 'Y'
			</otherwise>
		</choose>
	</select>
